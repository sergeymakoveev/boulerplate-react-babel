{
    "parser": "babel-eslint",
    "plugins": [ "react" ],
    "extends":  ["eslint:recommended", "plugin:react/recommended"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "ymaps": false
    },
    "settings": {
        "react": {
            "version": "15.0"
        }
    },
    "rules": {
        "strict": 1,
        "quotes": [ 1, "single" ],
        "eol-last": 1,
        "new-cap": 0,
        "no-console": 0,
        "no-debugger": 1,
        "no-extra-semi": 1,
        "no-underscore-dangle": 0,
        "no-unreachable": 2,
        "no-use-before-define": 1,
        "comma-dangle": [
            2, "always-multiline"
        ],
        "react/jsx-boolean-value": 2
    }
}